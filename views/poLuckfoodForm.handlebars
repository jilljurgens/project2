<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h2 class="page-header">Dashboard</h2>
	<p>Welcome to your dashboard</p> 
	<div class="row buttonHolder">
		<div class="col-lg-12">
			<button type="button" class="btn btn-info potLuckInfo">My PotLucks Info</button>

	      	<button type="button" class="btn btn-info potLuckCreate" id="potLuckCreate">Host Potluck</button>

	      	<button type="button" class="btn btn-info inviteGuests">Invite Guests</button>
		</div>
		
	</div>
    <!-- invite guests -->
	<div class="row inviteForm">
        <div class="col-lg-12">
          <div class="form-group">
              <label for="date">Food you want to bring </label>
              <input type="date" class="form-control" id="date">
          </div> 
          <button type="submit" class="btn btn-default createOne">Create</button>
        </div>  
    </div>
    <div class="row marketing">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}} 
        </div>
    </div>

</body>
</html>
