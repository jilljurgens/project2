<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h2 class="page-header">Dashboard</h2>
	<p>Welcome to your dashboard</p> 
	<div class="row buttonHolder">
		<div class="col-lg-12">
			<button type="button" class="btn btn-info potLuckInfo">My PotLucks Info</button>

	      	<button type="button" class="btn btn-info potLuckCreate" id="potLuckCreate">Host Potluck</button>

	      	<button type="button" class="btn btn-info inviteGuests">Invite Guests</button>

          <button type="button" class="btn btn-info join">Join a PutLuck</button>
		</div>
		
	</div>

	<div class="row potLuck-container">
	    <div class="col-lg-8 col-md-offset-2">
        <h1>PotLucks You Hosted</h1>
        <table class="table table-striped" id="potlucktable">
            <thead>
              <tr>
                <th>PotLuck Id</th>
                <th>Date</th>
                <th>Guest Emails</th>
              </tr>
            </thead>
            <tbody id="table">
  
            </tbody>
        </table>         
	    </div>
	</div>

	<!-- host a potLuck form -->
	<div class="row hostPotForm">
        <div class="col-lg-12">
            <div class="form-group">
              <label for="date">Date of PotLuck:</label>
              <input type="date" class="form-control" id="date">
              <label for="theme">Theme of the PotLuck</label>
              <input type="text" class="form-control" id="theme">
              <label for="destination">Destination</label>
              <input type="text" class="form-control" id="destination">
            </div> 
            <button type="submit" class="btn btn-default createOne">Create</button>   
        </div>  
    </div>

    <!-- host a potLuck form -->
  <div class="row joinForm">
        <div class="col-lg-12">
            <div class="form-group">
              <label for="attending">Are you Joinning the PotLuck</label>
              <div class="radio-inline">
                <label><input type="radio" name="attending" value="yes">yes</label>
              </div>
              <div class="radio-inline">
                <label><input type="radio" name="attending" value="no">no</label>
              </div>
              
              <label for="food">Enter the food that you are bringing in</label>
              <input type="text" class="form-control" id="food">
              <label for="potLuckId">Enter the PotLuck Id you want to join</label>
              <input type="text" class="form-control" id="potLuckId">
            </div> 
            <button type="submit" class="btn btn-default addInfo">Submit</button>   
        </div>  
    </div>

    <!-- invite guests -->
	<div class="row inviteForm">
        <div class="col-lg-12">
            <div class="form-group">
              <label for="emails">Enter the email id's of the guests(, seperated)</label>
              <input type="textarea" class="form-control" id="emails">
            </div> 
            <button type="submit" class="btn btn-default invite">Invite</button>   
        </div>  
    </div>


    <div class="row marketing">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}} 
        </div>
    </div>

      <!-- <script type="text/javascript">
      	var fix = {{id}};
      </script> -->
</body>
</html>
